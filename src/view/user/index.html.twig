{% extends 'admin/admin.html.twig' %}

{% block content %}
    <h3>Railtour Admin Users</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Active?</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
                <tr>
                    <td><strong>{{ user.username }}</strong></td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>     
                    <td>{{ user.role }}</td>                      
                    <td>{{ user.is_active ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('user/edit', user.username) }}">Edit</a>
                        {% if user.username == 'admin' %}
                            <a class="btn btn-danger btn-sm disabled">Delete</a>
                        {% else %}
                            <a class="btn btn-danger btn-sm" href="{{ path('user/delete', user.username) }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('user/new') }}">
                Add a new user
            </a>
        </div>
{% endblock content %}
