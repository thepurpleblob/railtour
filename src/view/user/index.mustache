{{> header }}
    <h3>Railtour Admin Users</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Role</th>
                <th>Active?</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {{# users }}
                <tr>
                    <td><strong>{{ username }}</strong></td>
                    <td>{{ firstname }}</td>
                    <td>{{ lastname }}</td>
                    <td>{{ role }}</td>
                    <td>{{ is_active ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('user/edit', user.username) }}">Edit</a>
                        {% if user.username == 'admin' %}
                            <a class="btn btn-danger btn-sm disabled">Delete</a>
                        {% else %}
                            <a class="btn btn-danger btn-sm" href="{{ path('user/delete', user.username) }}">Delete</a>
                        {% endif %}
                    </td>
                </tr>
        {{/ users }}
            </tbody>
        </table>

        <div class="btn-group">
            <a class="btn btn-primary" href="{{ path('user/edit', ' ') }}">
                Add a new user
            </a>
        </div>

{{> footer }}
