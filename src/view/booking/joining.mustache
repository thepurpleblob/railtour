{{> header }}

{{> usermenu }}

<div class="container-fluid px-4">

    {{> booking/telephonestatus }}

    <h3 class="display-6 text-center">Joining station...</h3>

    <div class="container border shadow p-3">

        <p>
            Please tell us which station you will be joining the train at.
        </p>

        {{> form_errors }}

        <form id="joining-form" class="form-horizontal" action="{{# path }}booking/joining{{/ path }}" method="post">
            
            {{{  form.joining }}}
            
            <div class="mt-3">
                <input type="submit" name="next" value="Next step" class="btn btn-primary" />
                <input type="submit" name="back" value="Back" class="btn btn-warning" formnovalidate />
            </div>
        </form>

    </div>

</div>

{{> footer }}