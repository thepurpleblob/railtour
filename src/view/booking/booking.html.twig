    <script src="{{ vendor('components/jquery/jquery.js') }}"></script>
    <script src="{{ vendor('components/bootstrap/js/bootstrap.js')  }}"></script>
    <script src="{{ vendor('tinymce/tinymce/tinymce.js') }}"></script>
    <script src="{{ vendor('eternicode/bootstrap-datepicker/dist/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('jquery-validate/dist/jquery.validate.js') }}"></script>
    <script src="{{ asset('jquery-validate/dist/additional-methods.js') }}"></script>
    <script src="{{ vendor('components/jqueryui/jquery-ui.js') }}"></script>
    <script src="{{ asset('jquery-selectboxit/jquery.selectBoxIt.min.js') }}"></script>

    <script type="text/javascript">
        tinyMCE.init({
            selector: 'textarea',
            statusbar: false
        });

        $("select").selectBoxIt({
            showEffect: "fadeIn",
            hideEffect: "fadeOut",
            theme: 'bootstrap3'
        });

    </script>
{% endblock javascripts %}