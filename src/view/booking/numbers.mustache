{{> header }}

{{> usermenu }}

<div class="container-fluid px-4">

    {{> booking/telephonestatus }}

    <h1 class="display-6 text-center">People in your party...</h1>

    <div class="container border shadow p-3">

        <p>
            Please tell us how many adults and children (14 years old and under) are travelling in
            your party. Do not include infants (under 5) who travel free but will not
            be allocated a seat.
        </p>

        <p class="alert alert-info">
            Your party can have a maximum of {{ maxparty }} persons.
        </p>

        {{> formerrors }}

        <form id="numbers-form" class="form-horizontal" action="{{# path }}booking/numbers{{/ path }}/{{ service.id }}" method="post">
            {{{ form.adults }}}
            {{{ form.children }}}

            <div>
                <input type="submit" name="next" value="Next step" class="btn btn-primary" />
                <input type="submit" name="cancel" value="Cancel" class="btn btn-warning" formnovalidate />
            </div>
        </form>

    </div>

</div>

{{> footer }}
