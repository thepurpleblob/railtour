{{> header }}

{{> adminmenu }}

    <h3 class="adminpage_title">Railtour Services</h3>

    <form id="services_filter_form" class="form-horizontal" action="{{# path }}service/index{{/path}}"
          novalidate="novalidate" method="post">
        {{{ form.filter_year }}}
    </form>

    {{^ is_services }}
        <div class="alert alert-danger">No services for selected year</div>
    {{/ is_services }}

    {{# is_services }}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Visible</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {{# services }}
            <tr>
                <td><strong>{{ code }}</strong></td>
                <td>{{ name }}</td>
                <td>
                    {{# visible }}
                        <a class="badge badge-success" data-toggle="tooltip" title="Click to hide"
                           href="{{# path }}service/visible{{/ path }}/{{ id }}/0">Yes</a>
                    {{/ visible }}
                    {{^ visible }}
                        <a class="badge badge-dark" data-toggle="tooltip" title="Click to show"
                           href="{{# path }}service/visible{{/ path }}/{{ id }}/1">No</a>
                    {{/ visible }}
                </td>
                <td>{{# date }}{{ formatteddate }}{{/ date }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-sm btn-success" href="{{# path }}service/show{{/ path }}/{{ id }}">Show</a>
                        <a class="btn btn-sm btn-primary" href="{{# path }}limits/edit{{/ path }}/{{ id }}">Limits</a>
                        {{# showbookingbutton }}
                            <a class="btn btn-sm btn-info" href="{{# path }}booking/index{{/ path }}/{{ code }}">Book</a>
                        {{/ showbookingbutton }}
                        {{^ showbookingbutton }}
                            <a class="btn btn-sm btn-info disabled">Book</a>
                        {{/ showbookingbutton }}
                        <a class="btn btn-sm btn-warning" href="{{# path }}report/list{{/ path }}/{{ id }}">Report</a>
                        <a class="btn btn-sm btn-dark" href="{{# path }}report/expot{{/ path }}/{{ id }}">Export</a>
                        <a class="btn btn-sm btn-secondary" href="{{# path }}report/duplicate{{/ path }}/{{ id }}">Duplicate</a>
                        <a class="btn btn-sm btn-danger" href="{{# path }}report/delete{{/ path }}/{{ id }}">Delete</a>
                    </div>
                </td>
            </tr>
        {{/services }}
        </tbody>
    </table>

    {{/ is_services }}

        {{^ enablebooking }}
            <div class="alert">
                NOTE: Booking is currently disabled on this site
            </div>
        {{/ enablebooking }}

        {{# system.admin }}
            <div class="btn-group">
                <a class="btn btn-primary" href="{{# path }}service/edit{{/ path }}">
                    Add a new service
                </a>
            </div>
        {{/ system.admin }}

{{> footer }}
