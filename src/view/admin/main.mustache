{{> header }}

{{# system.adminpages }}
    <a href="{{# path }}service/index{{/ path }}">
        <div class="alert alert-primary">
            <i class="fas fa-cog"></i> Click here for admin/organiser portal.
        </div>    
    </a>    
{{/ system.adminpages }}

<h3>Railtours available for booking now</h3>

{{^ anyservices }}
    <div class="alert alert-warning">
        <i class="fas fa-exclamation"></i> No services available to book at the moment
    </div>
{{/anyservices}}

{{# services }}
    <div class="card">
        <div class="card-header"><strong>({{ code }})</strong> {{ name }} on {{ date }}</div>
        <div class="card-body">
            <div class="card-text">
                {{{ description }}}
                <br /><br />
                <a class="btn btn-warning" href="{{# path }}booking/telephone{{/ path }}/{{ code }}">Telephone booking</a>
            </div>
        </div>
    </div>
{{/ services }}



{{> footer }}
