{% extends 'admin/admin.html.twig' %}

{% block content %}
    <h3>Railtour Services</h3>

    {% for service in services %}
        <div class="panel panel-primary">
            <div class="panel-heading">{{ service.date | date('jS F Y') }} : {{ service.name }}</div>
            <div class="panel-body">
                {{ service.description | raw }}
                <br /><br />
                <a class="btn btn-primary" href="{{ path('booking/index', service.code) }}">Book now</a>
                {% if system.loggedin %}
                    <a class="btn btn-warning" href="{{ path('booking/telephone', service.code) }}">Telephone booking</a>
                {% endif %}
            </div>
        </div>
    {% endfor %}

    <div>

    </div>

{%  endblock %}