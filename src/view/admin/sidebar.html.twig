{# Sidebar template #}

<h4>Admin menu</h4>

{% if app.user %}
    <p><i>Welcome {{ app.user.username }} (<a href="{{ path('user/logout') }}">logout</a>)</i></p>
{% endif %}

<ul id="adminmenu">
    <li>
        <a class="btn btn-primary" href="{{ path('service/show', serviceid) }}">
            Show service
        </a>
    </li>
    {% if system.userrole == 'ROLE_ADMIN' %}
        <li>
            <a class="btn btn-warning" href="{{ path('service/edit', serviceid) }}">
                Edit service
            </a>
        </li>
    {% endif %}
    {% if serviceid %}
        {% if system.userrole == 'ROLE_ADMIN' %}
            <li>
                <a class="btn btn-warning" href="{{ path('destination/index', serviceid) }}">
                    {% if destinations is defined %}
                        {{ destinations ? 'Edit destinations' : 'New destination' }}
                    {% else %}
                        Edit destinations
                    {% endif %}    
                </a>
            </li>
            <li>
                <a class="btn btn-warning" href="{{ path('priceband/index', serviceid) }}">
                    {% if pricebandgroups is defined %}
                        {{ pricebandgroups ? 'Edit price bands' : 'New price band' }}
                    {% else %}
                        Edit price bands
                    {% endif %}
                </a>
            </li>
            <li>
                <a class="btn btn-warning" href="{{ path('joining/index', serviceid) }}">
                    {% if joinings is defined %}
                        {{ joinings ? 'Edit joining stations' : 'New joining station' }}
                    {% else %}
                        Edit joining stations
                    {% endif %}
                </a>
            </li>
        {% endif %}
        <li>
            <a class="btn btn-primary" href="{{ path('limits/edit', serviceid) }}">
                Booking limits
            </a>
        </li>
    {% endif %}
    <li>
        <a class="btn btn-success" href="{{ path('service/index') }}">
            Return to list
        </a>
    </li>
</ul>
