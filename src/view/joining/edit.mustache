{{> header }}

{{> adminmenu }}

    {{^ new }}
        <h3 class="adminpage_title">Edit joining station <i>"{{ service.name }}"</i></h3>
    {{/ new }}
    {{# new }}
        <h3 class="adminpage_title">Add new joining station <i>"{{ service.name }}"</i></h3>
    {{/ new }}

{{> form_errors }}

    <form id="joining-edit-form" class="form-horizontal" action="{{# path }}joining/edit{{/path}}/{{ serviceid }}/{{ joiningid }}"
          method="post">
        {{{ form.crs }}}
        {{{ form.station }}}
        {{{ form.pricebandgroupid }}}

        {{# service.mealavisible }}
            {{{ form.meala }}}
        {{/ service.mealavisible }}
        {{# service.mealbvisible }}
            {{{ form.mealb }}}
        {{/ service.mealbvisible }}
        {{# service.mealcvisible }}
            {{{ form.mealc }}}
        {{/ service.mealcvisible }}
        {{# service.mealdvisible }}
            {{{ form.meald }}}
        {{/ service.mealdvisible }}

        {{{ form.ajaxpath }}}

        <div>
            <input type="submit" name="submit" value="Save" class="btn btn-primary" />
            <input type="submit" name="cancel" value="Cancel" formnovalidate="formnovalidate" class="btn btn-warning" />
        </div>
    </form>

{{> footer }}

